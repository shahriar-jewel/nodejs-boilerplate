{
  "name": "portfolio-website-api-services",
  "version": "1.0.0",
  "description": "API service for portfolio website.",
  "main": "build/app.js",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-sass && npm run build-ts && npm run lint && npm run copy-static-assets",
    "build-sass": "sass src/public/scss/main.scss build/public/css/main.css",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "generate": "ts-node src/scripts/generate-module.ts",
    "serve": "node build/app.js",
    "watch-node": "nodemon build/app.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "watch-sass": "sass -w src/public/scss/main.scss build/public/css/main.css",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect build/app.js",
    "start-production": "forever start build/app.js",
    "stop-production": "forever stop build/app.js"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "Noman Juwel",
  "license": "UNLICENSED",
  "homepage": "",
  "dependencies": {
    "@types/cors": "^2.8.14",
    "@types/multiparty": "0.0.36",
    "axios": "^0.27.2",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "fs": "0.0.1-security",
    "generate-password": "^1.5.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.0",
    "multiparty": "^4.2.3",
    "node-cron": "^2.0.3",
    "nodemailer": "^6.7.8",
    "process": "^0.11.10",
    "pug": "^3.0.2",
    "reflect-metadata": "^0.2.2",
    "sass": "^1.79.4",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.32",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.7",
    "@types/fs-extra": "^9.0.1",
    "@types/generate-password": "^1.5.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.0.27",
    "@types/node-cron": "^2.0.3",
    "@types/nodemailer": "^6.4.0",
    "@types/pug": "^2.0.4",
    "@types/shelljs": "^0.8.8",
    "@types/uuid": "^8.0.0",
    "concurrently": "^5.3.0",
    "fs-extra": "^9.0.1",
    "jest": "^26.2.1",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.5",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "typescript": "^4.2.0"
  }
}
