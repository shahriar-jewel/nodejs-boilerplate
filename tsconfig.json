{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2019",
        "noImplicitAny": true,
        "removeComments": true,
        "moduleResolution": "node",
        "experimentalDecorators": true, // Enable decorators
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "outDir": "build",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
, "scripts", "generate-module.ts"    ]
}